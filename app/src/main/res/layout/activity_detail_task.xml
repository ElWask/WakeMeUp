<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.schmid_charlesa_esig.wakemeup.DetailTask">

    <TextView
        android:text="nameTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTask" />

    <TextView
        android:text="descTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTask"
        android:id="@+id/descTask" />

    <TextView
        android:text="dateTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descTask"
        android:id="@+id/dateTask" />
    <TextView
        android:text="hourTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateTask"
        android:id="@+id/hourTask" />
    <Button
        android:text="btnDetailTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hourTask"
        android:id="@+id/btnDetailTask" />
</RelativeLayout>
